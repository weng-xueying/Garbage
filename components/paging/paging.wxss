/* components/paging1/paging.wxss */
.img{
  border-radius:10rpx;
  width: 280rpx;
  height: 200rpx;
}
.box {
  border-bottom: 1px solid #ddd;
  padding: 12rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-start;
  background-color: #fff;
  border-radius: 10rpx;
}
.box_left {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.box_right {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-left: 35rpx;
}
.text_title{
  font-size: 35rpx;
}
.text_Summary {
  display: block;
  width: 370rpx;
  font-size: 30rpx;
  word-wrap: break-word;
  color: gray;
  margin-top: 10rpx;
}


