  url('//at.alicdn.com/t/font_2220712_q67tcn4ktvm.woff2') format('woff2'),
  url('//at.alicdn.com/t/font_2220712_q67tcn4ktvm.woff') format('woff'),
  url('//at.alicdn.com/t/font_2220712_q67tcn4ktvm.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_2220712_q67tcn4ktvm.svg#iconfont') format('svg');
}
.iconfont{
  font-family:'iconfont';
  font-size:25px;
}
